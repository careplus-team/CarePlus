generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public"]
}

model user {
  email          String    @id @unique
  name           String
  age            Int?
  gender         gender?
  username       String
  dateofbirth    DateTime?
  mobilenumber   String?
  address        String?
  role           role?     @default(user)
  profilePicture String?   @default("/temp_user.webp")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @default(now())

  @@schema("public")
}

enum gender {
  male
  female
  other

  @@schema("public")
}

enum role {
  user
  admin
  doctor
  emergency_manager
  ambulance_operator

  @@schema("public")
}

model doctor {
  name           String
  email          String   @id @unique
  specialization String
  medicalregno   String   @unique
  gender         gender
  phoneNumber    String?
  address        String?
  workplace      String?
  bio            String?
  profilePicture String?  @default("/temp_doctor.webp")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())

  @@schema("public")
}

model admin {
  email     String   @id @unique
  name      String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@schema("public")
}

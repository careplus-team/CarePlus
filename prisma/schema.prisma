generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public"]
}

model user {
  email          String    @id @unique
  name           String
  age            Int?
  gender         gender?
  username       String
  dateofbirth    DateTime?
  mobilenumber   String?
  address        String?
  role           role?     @default(user)
  profilePicture String?   @default("/temp_user.webp")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @default(now())

  @@schema("public")
}

model doctor {
  name           String
  email          String   @id @unique
  specialization String
  medicalregno   String   @unique
  gender         gender
  phoneNumber    String?
  address        String?
  workplace      String?
  bio            String?
  profilePicture String?  @default("/temp_doctor.webp")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())
  verification   Boolean  @default(false)
  OPD            Boolean? @default(false)

  @@schema("public")
}

model admin {
  email     String   @id @unique
  name      String
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@schema("public")
}

model notice {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  piority   piority  @default(low)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@schema("public")
}

model healthtip {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@schema("public")
}

model opdsession {
  id                      BigInt    @id(map: "model opdsession {_pkey") @default(autoincrement())
  created_at              DateTime  @default(now()) @db.Timestamptz(6)
  doctorEmail             String?
  doctorName              String?
  numberOfPatientsSlots   Int?
  estimatedTimePerPatient BigInt?
  notes                   String?
  updatedAt               DateTime? @default(now()) @db.Timestamp(6)
  timeslot                DateTime? @db.Time(6)

  @@schema("public")
}

model channel {
  id                  BigInt         @id(map: "Channel_pkey") @default(autoincrement())
  created_at          DateTime       @default(now()) @db.Timestamptz(6)
  name                String?
  doctorName          String?
  doctorEmail         String?
  date                DateTime?      @db.Date
  time                DateTime?      @db.Time(6)
  totalSlots          Int?
  state               String?        @default("Not Yet Started")
  roomNumber          Int?           @db.SmallInt
  estimateWaitingTime Int?
  description         String?
  remainingSlots      Int?
  currentNumber       Int?           @default(0)
  appointments        appointments[]

  @@schema("public")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model appointments {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  channelId  BigInt?
  userEmail  String?
  seatNumber Int?     @default(1)
  note       String?
  channel    channel? @relation(fields: [channelId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "appointments_channelid_fkey")

  @@schema("public")
}

enum gender {
  male
  female
  other

  @@schema("public")
}

enum role {
  user
  admin
  doctor
  emergency_manager
  ambulance_operator

  @@schema("public")
}

enum piority {
  low
  medium
  high

  @@schema("public")
}
